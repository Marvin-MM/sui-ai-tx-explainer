generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  suiAddress    String    @unique
  email         String?   @unique
  name          String?
  avatar        String?
  authMethod    AuthMethod
  plan          Plan      @default(FREE)
  dailyUsage    Int       @default(0)
  lastUsageDate DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  chats         Chat[]
  wallets       Wallet[]
  subscriptions Subscription[]
  notifications Notification[]

  @@index([suiAddress])
}

model Wallet {
  id         String   @id @default(cuid())
  address    String
  name       String?
  isPrimary  Boolean  @default(false)
  monitoring Boolean  @default(false)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, address])
  @@index([address])
}

model Chat {
  id        String    @id @default(cuid())
  title     String    @default("New Chat")
  userId    String?
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  guestId   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@index([userId])
  @@index([guestId])
}

model Message {
  id        String   @id @default(cuid())
  role      Role
  content   String
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  txDigest  String?
  createdAt DateTime @default(now())

  @@index([chatId])
}

model Transaction {
  id          String   @id @default(cuid())
  digest      String   @unique
  sender      String
  status      String
  gasUsed     String
  timestamp   DateTime
  rawData     Json
  explanation String?
  createdAt   DateTime @default(now())

  @@index([sender])
  @@index([digest])
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  stripePriceId        String?
  status               String   @default("active")
  currentPeriodEnd     DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([userId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  txDigest  String?
  createdAt DateTime @default(now())

  @@index([userId])
}

enum AuthMethod {
  WALLET
  ZKLOGIN
}

enum Plan {
  FREE
  PRO
}

enum Role {
  user
  assistant
  system
}
